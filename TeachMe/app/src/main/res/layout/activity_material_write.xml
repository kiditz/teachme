<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary" />


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_height="match_parent">


        <!-- Begin Editor toolbar -->


        <HorizontalScrollView android:id="@+id/tools"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:background="#e6e6e6"
                              android:layout_alignParentBottom="true"
                              android:scrollbars="none">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <ImageButton
                        android:id="@+id/action_undo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_undo"
                        android:contentDescription="@null"/>
                <ImageButton
                        android:id="@+id/action_redo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_redo" />

                <ImageButton
                        android:id="@+id/action_align_left"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_align_left" />
                <ImageButton
                        android:id="@+id/action_align_center"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_align_center" />
                <ImageButton
                        android:id="@+id/action_align_right"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/icon_align_right" />

                <Button
                        android:id="@+id/action_h1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:width="40dp"
                        android:height="40dp"
                        android:background="@android:color/transparent"
                        android:text="H1"
                        android:contentDescription="@null"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <Button
                        android:id="@+id/action_h2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:width="40dp"
                        android:height="40dp"
                        android:background="@android:color/transparent"
                        android:text="H2"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <Button
                        android:id="@+id/action_h3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:width="40dp"
                        android:height="40dp"
                        android:background="@android:color/transparent"
                        android:text="H3"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <ImageButton
                        android:id="@+id/action_bold"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/icon_bold" />

                <ImageButton
                        android:id="@+id/action_Italic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_italic" />

                <ImageButton
                        android:id="@+id/action_indent"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_indent" />

                <ImageButton
                        android:id="@+id/action_outdent"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_outdent" />


                <ImageButton
                        android:id="@+id/action_bulleted"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_bullet_list" />

                <ImageButton
                        android:id="@+id/action_unordered_numbered"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_numbered_list" />

                <ImageButton
                        android:id="@+id/action_hr"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_hr" />

                <ImageButton
                        android:id="@+id/action_insert_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_image" />


                <ImageButton
                        android:id="@+id/action_insert_link"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_link" />

                <!--<ImageButton-->
                <!--android:id="@+id/action_map"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:maxHeight="20dp"-->
                <!--android:maxWidth="20dp"-->
                <!--android:src="@drawable/icon_marker" />-->

                <ImageButton
                        android:id="@+id/action_erase"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/icon_erase" />

            </LinearLayout>

        </HorizontalScrollView>
        <!--End of Editor toolbar -->
        <ScrollView
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:layout_marginBottom="40dp"
                android:layout_alignParentTop="true"
                android:layout_height="match_parent"
                android:scrollbarStyle="insideOverlay">
            <com.slerpio.view.editor.RichEditor
                    android:layout_width="match_parent"
                    android:id="@+id/editor"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="100dp"/>
        </ScrollView>

        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
