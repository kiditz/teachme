<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="3dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardMaxElevation="1dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
        <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rootLayout"
                android:text="Tugas Bahasa indonesia untuk kelas 6 dan wajib di kumpulkan hari senin..."
                android:textSize="15sp"
                android:visibility="visible" android:layout_margin="5dp"/>

        <RelativeLayout
                android:id="@+id/rootLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Tugas Bahasa indonesia..."
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>

            <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:text="1 hari lalu"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText"/>
            <TextView
                    android:id="@+id/hours"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"

                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:text="14:28"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>